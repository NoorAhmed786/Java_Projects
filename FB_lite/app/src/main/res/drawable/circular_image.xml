<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Optional: Set the background color or leave transparent -->
    <solid android:color="@android:color/transparent" />

    <!-- Define the width and height for the oval (circle) -->
    <size
        android:width="60dp"
        android:height="60dp" />

    <!-- Optional: Set a stroke or border -->
    <stroke
        android:width="2dp"
        android:color="#FF0000" /> <!-- Set the color for the border -->
</shape>

