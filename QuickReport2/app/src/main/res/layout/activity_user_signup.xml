<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".UserSignup">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/adminloginbtn"
        android:src="@drawable/admin2"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardBackgroundColor="#F7FDFBFB"
        android:layout_alignParentBottom="true"
        android:id="@+id/card"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logoadmin"
                android:contentDescription="@string/adminloginbtn"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="User SignUp"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:textColor="@color/black"
                android:ems="12"
                android:hint="Enter your Name"
                android:drawableEnd="@drawable/baseline_person_24"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/username"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/poppins_regular"

                android:background="@drawable/rounded_edit"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="emailAddress"
                android:textColor="@color/black"
                android:ems="12"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter your Email"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/baseline_email_24"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/userSignupemail"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColorHint="@color/black"
                android:background="@drawable/rounded_edit"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:autofillHints="password"
                android:ems="12"
                android:hint="Enter your password"
                android:drawableEnd="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                android:textColorHint="@color/black"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/userSignuppassword"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/poppins_regular"

                android:background="@drawable/rounded_edit"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="15dp"
                android:backgroundTintMode="@color/black"
                android:textColor="@color/white"
                android:id="@+id/usersignupbtn"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/userSignupbtn"
                tools:ignore="ExtraText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="92dp"
                    android:layout_gravity="center"
                    android:text="Already have an account?"
                    android:textAlignment="center"
                    android:textColor="#898888"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/userloginredirect"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Quick Report"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#898888"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>