<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recTmage"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/admin2"
            app:shapeAppearanceOverlay="@style/RoundedImageViewRounded"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recComplain"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="complain"
            android:layout_toEndOf="@+id/recTmage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recarea"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:text="area"
            android:layout_toEndOf="@+id/recComplain"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recDesc"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:text="description"
            android:layout_toEndOf="@+id/recTmage"
            android:layout_below="@+id/recComplain"
            android:maxLines="0"
            android:layout_marginStart="20dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>