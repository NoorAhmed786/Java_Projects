<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context=".UploadActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Complain"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/baseline_add_a_photo_24"
                android:layout_marginTop="10dp"
                android:id="@+id/uploadimage"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadtopic"
                android:background="@drawable/cardborder"
                android:fontFamily="@font/poppins_regular"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:textColorHint="@color/grey"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter Your complain "
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/uploadtopicdesc"
                android:background="@drawable/cardborder"
                android:fontFamily="@font/poppins_regular"
                android:textColorHint="@color/grey"
                android:drawableEnd="@drawable/baseline_edit_note_24"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter Description"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/area"
                android:background="@drawable/cardborder"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:drawableEnd="@drawable/baseline_location_pin_24"
                android:textColorHint="@color/grey"
                android:padding="16dp"
                android:hint="Enter your location"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="save"
                android:id="@+id/savebutton"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Quick Report"
                android:textAlignment="center"
                android:textColor="#898888"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>